<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iniciar_sesion"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/logocolor"
        android:layout_marginBottom="50dp"
        />

    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_et"
        android:fontFamily="sans-serif-condensed"
        android:hint="Usuario"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etContrasenia"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:hint = "ConstraseÃ±a"
        android:fontFamily="sans-serif-condensed"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:background="@drawable/round_et"
        />

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/boton_cafeclaro"
        android:text="Iniciar"
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnUsuarioNuevo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/boton_cafeclaro"
        android:fontFamily="sans-serif-condensed"
        android:paddingHorizontal="15dp"
        android:text="Usuario nuevo"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>