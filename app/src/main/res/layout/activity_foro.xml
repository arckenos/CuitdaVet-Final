<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    tools:context=".foro">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:background="@drawable/boton_cafeoscuro"
        android:paddingHorizontal="50dp"
        android:text="Hábitos y Tips para mascotas"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginBottom="50dp"
        />

    <Button
        android:id="@+id/btn_tips"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#372F18"
        android:text="Tips"
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="false"
        android:background="@drawable/round_et"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btn_habitos"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#372F18"
        android:text="Hábitos Saludables"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_et"
        android:fontFamily="sans-serif-condensed"
        android:textSize="25dp"
        android:textAllCaps="false"/>

    <ImageView
        android:id="@+id/iv_huella"
        android:layout_width="match_parent"
        android:layout_height="289dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/veterinario"/>

</LinearLayout>