<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.cambiarusuario.CambiarusuarioFragment">

    <EditText
        android:id="@+id/etUsuarioActual"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_et"
        android:hint="Usuario Actual"
        android:fontFamily="sans-serif-condensed"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etUsuarioNuevo"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_et"
        android:hint="Usuario Nuevo"
        android:fontFamily="sans-serif-condensed"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etContrasenia"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_et"
        android:hint="ConstraseÃ±a"
        android:fontFamily="sans-serif-condensed"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:paddingHorizontal="15dp"
        android:textColor="@color/white"
        android:background="@drawable/boton_cafeclaro" />

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_pets"
        app:tint="@color/cafe_oscuro" />
</LinearLayout>